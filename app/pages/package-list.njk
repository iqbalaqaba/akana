<!-- set title -->
{% set title = 'Package List' %}
{% set description = 'Package List' %}

<!-- extends from layout -->
{% extends "layout.njk" %}

<!-- contents start from here -->
{% block content %}
    <!-- header start here -->
    <div class="container-fluid c-pkg-list-header">
        <div class="c-pkg-list-header-content  d-flex align-items-center">
            <div class="container">
                <!-- content start here -->
                <div class="row no-gutter">
                    <div class="col-lg-12">

                        <!-- title start here -->
                        <h3 class="text-center">
                            EXPLORE OUR BEST TOUR PACKAGES
                        </h3>
                        <!-- title end here -->

                        <!-- searchbox start here -->
                        <div class="card mx-auto">
                            <div class="card-body">
                                <form class="mb-0 form-inline">
                                    <input type="text" class="form-control form-control-lg" placeholder="Cari paket tour disini...">
                                    <button type="submit" class="btn btn--primary ml-3">search</button>
                                </form>
                            </div>
                        </div>
                        <!-- searchbox end here -->

                    </div>
                </div>
                <!-- content end here -->
            </div>

        </div>
    </div>
    <!-- header end here -->
{% endblock %}
<!-- contents end here -->